@inject IJSRuntime JsRuntime
@rendermode InteractiveServer

<div id="top_line">
        <div class="container">
            <div class="row">
                <div class="col-5">
                    <i class="fa-solid fa-phone"></i>
                    <strong>(53) 3233-8407</strong>
                </div>
                <div class="col-7">
                    <ul id="top_links">
                        <li>
                            <a href="#log_in_dialog">
                                <i class="fa-solid fa-arrow-right-to-bracket"></i>
                                Log In
                            </a>
                        </li>
                        <li>
                            <a href="#log_in_dialog">
                                <i class="fa-solid fa-user-plus"></i>
                                Registre-se
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- End top line -->

@code {
    protected async override Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JsRuntime.InvokeVoidAsync("makeHeaderSticky", null);
            await JsRuntime.InvokeVoidAsync("topLinksHover", null); 
            await JsRuntime.InvokeVoidAsync("qtyGuestAnimation", null);  
        }
    }
}